<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rows</th>
      <th>Columns</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @plane.name %></td>
        <td><%= @plane.rows %></td>
        <td><%= @plane.columns %></td>
      </tr>
  </tbody>
</table>

<table id="seating">
  <thead>
    <tr>
      <th></th>
      <% 1.upto(@plane.columns) do |i| %>
        <th><%= (i+65).chr %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% 1.upto(@plane.rows) do |i| %>
    <tr>
      <th><%= i %></th>
      <% 1.upto(@plane.columns) do |j| %>
      <td><%= (i).to_s + (65+j).chr %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>

</table>
<%= link_to 'Edit', edit_plane_path(@plane) %> |
<%= link_to 'Back', planes_path %>
